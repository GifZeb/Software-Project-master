<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".Main2Activity"
    tools:showIn="@layout/app_bar_main2"
    android:background="?attr/backgroundcolor">

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_weight="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="0dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginTop="2dp"
                android:background="#e53935"
                android:gravity="center"
                android:text="@string/current_humidity_in_arboretum"
                android:textColor="#FFF"
                android:textSize="30sp" />


            <TextView
                android:id="@+id/readhumidity"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:layout_marginBottom="3dp"
                android:background="#e53935"
                android:gravity="center"
                android:text="TextView"
                android:textColor="#FFF"
                android:textSize="25sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="#008577"
                android:gravity="center"
                android:text="@string/current_temperature_in_arboretum"
                android:textColor="#FFF"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/readtemp"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:layout_marginBottom="3dp"
                android:background="#008577"
                android:gravity="center"
                android:text="TextView"
                android:textColor="#FFF"
                android:textSize="25sp" />

            <TextView
                android:layout_width="629dp"
                android:layout_height="80dp"
                android:background="#5f0085"
                android:gravity="center"
                android:text="@string/current_moisture_level_in_soil"
                android:textColor="#FFF"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/readmoisture"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:layout_marginBottom="3dp"
                android:background="#5f0085"
                android:gravity="center"
                android:text="TextView"
                android:textColor="#FFF"
                android:textSize="25sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#20508f"
                android:gravity="center"
                android:text="@string/current_date"
                android:textColor="#FFF"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/readtime"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:layout_marginBottom="3dp"
                android:background="#20508f"
                android:gravity="center"
                android:text="TextView"
                android:textColor="#FFF"
                android:textSize="25sp" />

            <Button
                android:id="@+id/button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#008577"
                android:onClick="onClick"
                android:text="@string/camera"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:ems="10"
                android:hint="@string/enter_your_location"
                android:inputType="textPersonName"
                android:paddingLeft="5dp"
                android:textSize="20sp"
                android:paddingRight="5dp" />

            <Button
                android:id="@+id/getdata"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:ems="10"
                android:paddingLeft="5dp"
                android:background="@color/red"
                android:textColor="@color/colorWhite"
                android:paddingRight="5dp"
                android:text="@string/get_data" />

        </LinearLayout>


    </ScrollView>


</RelativeLayout>